    { name: 'Novo', count: 5, color: '#6366F1', items: ['PE 234/2025', 'PE 235/2025'] },
    { name: 'An√°lise', count: 3, color: '#8B5CF6', items: ['PE 230/2025'] },
    { name: 'Prepara√ß√£o', count: 4, color: '#F59E0B', items: ['PE 228/2025'] },
    { name: 'Enviado', count: 2, color: '#0EA5E9', items: ['PE 225/2025'] },
  ];

  return (
    <div className="space-y-4">
      <h2 className={`text-lg font-bold ${textClass}`}>Kanban Board</h2>
      <div className="flex gap-3 overflow-x-auto pb-4">
