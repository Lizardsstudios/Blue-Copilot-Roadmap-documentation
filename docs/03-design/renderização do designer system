        <h2 className={`text-lg font-bold mb-4 ${textClass}`}>Select</h2>
        <div className="relative">
          <select className={`w-full px-3 py-2 rounded-lg border appearance-none text-sm focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 outline-none ${inputClass}`}>
            <option>Todos os status</option>
            <option>Novo</option>
            <option>Em An√°lise</option>
            <option>Em Prepara√ß√£o</option>
          </select>
