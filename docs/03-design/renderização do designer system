            <div className={`rounded-xl p-3 ${darkMode ? 'bg-slate-800' : 'bg-slate-100'}`}>
              <div className="flex items-center gap-2 mb-3">
                <div className="w-2.5 h-2.5 rounded-full" style={{ backgroundColor: col.color }} />
                <span className={`font-semibold text-sm ${textClass}`}>{col.name}</span>
                <span className={`ml-auto px-1.5 py-0.5 rounded-full text-xs font-medium ${darkMode ? 'bg-slate-700 text-slate-300' : 'bg-slate-200 text-slate-600'}`}>
