    { id: 'badges', label: 'üè∑Ô∏è Badges' },
    { id: 'kanban', label: 'üìã Kanban' },
  ];

  const bgClass = darkMode ? 'bg-slate-900' : 'bg-slate-50';
  const textClass = darkMode ? 'text-white' : 'text-slate-800';
  const textMuted = darkMode ? 'text-slate-400' : 'text-slate-500';
  const cardClass = darkMode ? 'bg-slate-800 border-slate-700' : 'bg-white border-slate-200';

  return (
    <div className={`min-h-screen transition-colors ${bgClass}`}>
      {/* Header */}
      <header className={`sticky top-0 z-50 border-b ${darkMode ? 'bg-slate-800/95 border-slate-700' : 'bg-white/95 border-slate-200'} backdrop-blur`}>
